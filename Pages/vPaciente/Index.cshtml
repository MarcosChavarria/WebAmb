@model WebAmb.Pages.vPaciente.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Paciente[0].nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Paciente[0].apellido1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Paciente[0].apellido2)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Paciente[0].identificacion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Paciente[0].edad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Paciente[0].fechanacimiento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Paciente[0].telefono)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Paciente[0].direccion)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Paciente) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.apellido1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.apellido2)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.identificacion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.edad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.fechanacimiento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.telefono)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.direccion)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.paciente_id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.paciente_id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.paciente_id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
